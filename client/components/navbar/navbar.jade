div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.glyphicon.glyphicon-leaf Seedly

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      div.col-sm-3.col-md-3
        form.navbar-form(role='search')
          div.input-group
            input.form-control(type='text', placeholder='Search for products')
            span.input-group-btn
              button.btn.btn-default(type='button')
                span.glyphicon.glyphicon-search

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          a(href='/signup') Sign up

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a(href='/login') Login

        li(ng-show='isLoggedIn()')
          p.navbar-text Hello {{ getCurrentUser().name }}

        // TODO: implement shopping cart
        li(ng-show='isBuyer()', ng-class='{active: isActive("/shoppingcart")}')
          a(href='/shoppingcart')
            span.glyphicon.glyphicon-shopping-cart

        li.dropdown(ng-show='isLoggedIn()')
          a.dropdown-toggle(data-toggle='dropdown', href='#')
            span.glyphicon.glyphicon-cog
          ul.dropdown-menu
            li(ng-show='isAdmin()', ng-class='{active: isActive("/admin")}')
              a(href='/admin') Admin

            // TODO: implement view products
            // TODO: going to need an edit item page too
            li(ng-show='isSeller()', ng-class='{active: isActive("/yourproducts")}')
              a(href='/yourproducts') Your Products

            // TODO: implement create product
            li(ng-show='isSeller()', ng-class='{active: isActive("/createproduct")}')
              a(href='/createproduct') Create Product

            // TODO: implement view sales
            li(ng-show='isSeller()', ng-class='{active: isActive("/orders")}')
              a(href='/orders') Orders

            // TODO: implement update info
            li(ng-show='isSeller()', ng-class='{active: isActive("/accountinfo")}')
              a(href='/accountinfo') Account Info  

            // TODO: implement view sales
            li(ng-show='isBuyer()', ng-class='{active: isActive("/orders")}')
              a(href='/orders') Orders

            // TODO: implement checkout
            li(ng-show='isBuyer()', ng-class='{active: isActive("/checkout")}')
              a(href='/checkout') Checkout

            // TODO: implement update info make diff from seller?
            li(ng-show='isBuyer()', ng-class='{active: isActive("/accountinfo")}')
              a(href='/accountinfo') Account Info  

            // TODO: implement update info make diff from seller?
            li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
              a(href='/settings') Change Password

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
          a(href='', ng-click='logout()') Logout

