div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-lg-12
      h2.page-header Shopping Cart
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='product in awesomeProducts')
        li
          a(href='/productdetail/{{product._id}}', tooltip='{{product.name}}')
            | {{product.name}}
            br
            | ${{product.offers[0].price}} / {{product.offers[0].unit}}
            // TODO: this is not set anymore because of the way i set it up.
            | {{product.quantity}}
            div.productimgdiv
              img.productimg(src='{{product.imgurl}}')